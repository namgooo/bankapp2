<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 반드시 세미콜론 생략  -->
<mapper namespace="com.temco.bank_app.repository.interfaces.AccountRepository">
	
	<insert id="insert" parameterType="com.temco.bank_app.repository.entity.Account">
		insert into account_tb(number, password, balance, user_id, created_at)
		values(#{number}, #{password}, #{balance}, #{userId}, now())
	</insert>
	
	<update id="updateById" parameterType="com.temco.bank_app.repository.entity.Account">
		update account_tb set number = #{number},
							  password = #{password},
							  balance = #{balance},
							  user_Id = #{userId}
		where id = #{id}
	</update>
	
	<delete id="deleteById">
		delete from account_tb where id = #{id}
	</delete>
	
	<select id="findAll" resultType="com.temco.bank_app.repository.entity.Account">
		select * from account_tb
	</select>
	
	<select id="findByUserId" resultType="com.temco.bank_app.repository.entity.Account">
		select * from account_tb where user_id = #{principalId}
	</select>
	
	<select id="findById" resultType="com.temco.bank_app.repository.entity.Account">
		select * from account_tb where id = #{id}
	</select>
	
	<select id="findByNumber" resultType="com.temco.bank_app.repository.entity.Account">
		select * from account_tb where number = #{number}
	</select>
	
</mapper>